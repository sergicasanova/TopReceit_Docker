        "mongo-gridfs": "^1.1.0",
        "mongoose": "^7.4.3",
        "multer": "^1.4.2",
        "multer-gridfs-storage": "^5.0.2",
        "mysql2": "^3.12.0",
        "nodemailer": "^6.9.16",
        "path": "^0.12.7",
        "pg": "^8.13.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "sqlite": "^5.1.1",
